
CORE_DIRS += src/corelib/plugin

CORE_PUBLIC_INCLUDES += \
	QFactoryInterface \
	QLibrary \
	QPluginLoader \
	QUuid \
	QtPlugin \
	QtPluginInstanceFunction

CORE_PLUGIN_INCLUDES = \
	qfactoryinterface.h \
	qlibrary.h \
	qplugin.h \
	qpluginloader.h \
	qtplugin.h \
	qtplugininstancefunction.h \
	quuid.h

